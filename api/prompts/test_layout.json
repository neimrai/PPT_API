{
  "name": "test",
  "ordered": false,
  "slides": [
    {
      "id": "intro-pitchdeck-slide",
      "name": "Intro Pitch Deck Slide",
      "description": "A visually appealing introduction slide for a pitch deck, featuring a large title, company name, date, and contact information with a modern design. This Slide is always the first slide in a pitch deck, setting the tone for the presentation with a clean and professional look.",
      "json_schema": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "properties": {
          "title": {
            "description": "Main title of the slide",
            "type": "string",
            "minLength": 2,
            "maxLength": 15
          },
          "description": {
            "description": "Description as per the design",
            "type": "string"
          },
          "contactNumber": {
            "description": "Contact phone number displayed in footer",
            "type": "string"
          },
          "contactAddress": {
            "description": "Contact address displayed in footer",
            "type": "string"
          },
          "contactWebsite": {
            "description": "Contact website URL displayed in footer",
            "type": "string"
          },
          "companyName": {
            "description": "Company name displayed in header",
            "type": "string"
          },
          "date": {
            "description": "Date of the presentation",
            "type": "string"
          }
        },
        "required": [
          "title",
          "description",
          "contactNumber",
          "contactAddress",
          "contactWebsite",
          "companyName",
          "date"
        ],
        "additionalProperties": false
      }
    },
    {
      "id": "about-company-slide",
      "name": "About Our Company Slide",
      "description": "A slide layout providing an overview of the company, its background, and key information.",
      "json_schema": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "properties": {
          "title": {
            "description": "Main title of the slide",
            "type": "string",
            "minLength": 3,
            "maxLength": 30
          },
          "content": {
            "description": "Main content text describing the company or topic",
            "type": "string",
            "minLength": 25,
            "maxLength": 400
          },
          "companyName": {
            "description": "Company name displayed in header",
            "type": "string",
            "minLength": 2,
            "maxLength": 50
          },
          "date": {
            "description": "Today Date displayed in header",
            "type": "string",
            "minLength": 5,
            "maxLength": 30
          },
          "image": {
            "description": "Optional supporting image for the slide (building, office, etc.)",
            "type": "object",
            "properties": {
              "__image_url__": {
                "description": "URL to image",
                "type": "string",
                "format": "uri"
              },
              "__image_prompt__": {
                "type": "string",
                "minLength": 10,
                "maxLength": 50
              }
            },
            "required": ["__image_url__", "__image_prompt__"],
            "additionalProperties": false
          }
        },
        "required": ["title", "content", "companyName", "date"],
        "additionalProperties": false
      }
    },
    {
      "id": "problem-statement-slide",
      "name": "Problem Statement Slide",
      "description": "A slide layout designed to present a clear problem statement, including categories of problems, company information, and an optional image.",
      "json_schema": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "properties": {
          "title": {
            "description": "Main title of the problem statement slide",
            "type": "string",
            "minLength": 3,
            "maxLength": 20
          },
          "description": {
            "description": "Main content text describing the problem statement",
            "type": "string",
            "minLength": 50,
            "maxLength": 200
          },
          "problemCategories": {
            "description": "List of problem categories with titles, descriptions, and optional icons",
            "minItems": 2,
            "maxItems": 3,
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "description": "Title of the problem category",
                  "type": "string",
                  "minLength": 3,
                  "maxLength": 30
                },
                "description": {
                  "description": "Description of the problem category",
                  "type": "string",
                  "minLength": 20,
                  "maxLength": 100
                },
                "icon": {
                  "description": "Optional icon for the problem category",
                  "type": "object",
                  "properties": {
                    "__icon_url__": {
                      "description": "URL to icon",
                      "type": "string"
                    },
                    "__icon_query__": {
                      "type": "string",
                      "minLength": 5,
                      "maxLength": 20
                    }
                  },
                  "required": ["__icon_url__", "__icon_query__"],
                  "additionalProperties": false
                }
              },
              "required": ["title", "description"],
              "additionalProperties": false
            }
          },
          "companyName": {
            "description": "Company name displayed in header",
            "type": "string",
            "minLength": 2,
            "maxLength": 50
          },
          "date": {
            "description": "Today Date displayed in header",
            "type": "string",
            "minLength": 5,
            "maxLength": 30
          }
        },
        "required": ["title", "description", "problemCategories", "companyName", "date"],
        "additionalProperties": false
      }
    }
  ]
}